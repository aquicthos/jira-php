{
  "name": "JiraApiClient",
  "apiVersion": "0.1",
  "description": "JIRA REST API client.",
  "operations": {

    "getGroup": {
      "uri": "group",
      "summary": "Retrieve a group.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e560"
      },
      "parameters": {
        "groupname": {
          "$ref": "GroupParameter",
          "required": true
        },
        "expand": {
          "$ref": "ExpandParameter"
        }
      }
    },

    "createUser": {
      "uri": "user",
      "summary": "Create a user.",
      "httpMethod": "POST",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4163"
      },
      "parameters": {
        "name": {
          "$ref": "JsonParameter",
          "required": true
        },
        "password": {
          "$ref": "JsonParameter",
          "required": false
        },
        "emailAddress": {
          "$ref": "JsonParameter",
          "required": true
        },
        "displayName": {
          "$ref": "JsonParameter",
          "required": true
        }
      }
    },

    "searchUsers": {
      "uri": "user/search",
      "summary": "Retrieve a user.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4436"
      },
      "parameters": {
        "username": {
          "$ref": "UserParameter",
          "required": true
        }
      }
    },

    "searchAssignableUsers": {
      "uri": "user/assignable/search",
      "summary": "Retrieve a user.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4436"
      },
      "parameters": {
        "project": {
          "$ref": "ProjectQueryParameter",
          "required": true
        },
        "username": {
          "$ref": "UserParameter",
          "required": false
        },
        "maxResults": {
          "description": "The maximum number of users to return (defaults to 50).",
          "location": "query",
          "type": "string"
        }
      }
    },

    "getIssue": {
      "uri": "issue/{issueKey}",
      "summary": "Retrieve an issue.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4020"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter",
          "required": true
        },
        "fields": {
          "$ref": "FieldsParameter"
        }
      }
    },

    "getIssueMetadata": {
      "uri": "issue/{issueKey}/editmeta",
      "summary": "Retrieve an issue's metadata.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e830"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter",
          "required": true
        }
      }
    },

    "getIssueComments": {
      "uri": "issue/{issueKey}/comment",
      "summary": "Retrieve an issue's comments.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4574"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter",
          "required": true
        }
      }
    },

    "getIssueWatchers": {
      "uri": "issue/{issueKey}/watchers",
      "summary": "Retrieve an issue's watchers.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4574"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter",
          "required": true
        }
      }
    },

    "createIssue" : {
      "uri": "issue/{issueKey}",
      "summary": "Create an issue.",
      "httpMethod": "POST",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4020"
      },
      "parameters": {
        "fields": {
          "$ref": "JsonParameter",
          "required": true
        },
        "update": {
          "$ref": "JsonParameter"
        }
      }
    },

    "addIssueAttachment" : {
      "uri": "issue/{issueKey}/attachments",
      "summary": "Create an issue.",
      "httpMethod": "POST",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e4020"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter",
          "required": true
        },
        "file": {
          "location": "postFile",
          "type": "string",
          "required": true
        }
      }
    },

    "getProject": {
      "uri": "project/{projectKey}",
      "summary": "Retrieve a project.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e114"
      },
      "parameters": {
        "projectKey": {
          "$ref": "ProjectParameter",
          "required": true
        }
      }
    },

    "getProjectRoles": {
      "uri": "project/{projectKey}/role",
      "summary": "Retrieve project roles.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e1682"
      },
      "parameters": {
        "projectKey": {
          "$ref": "ProjectParameter",
          "required": true
        }
      }
    },

    "getProjectRole": {
      "uri": "project/{projectKey}/role/{id}",
      "summary": "Retrieve a project role.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e1682"
      },
      "parameters": {
        "projectKey": {
          "$ref": "ProjectParameter",
          "required": true
        },
        "id": {
          "$ref": "IdParameter",
          "required": true
        }
      }
    },

    "search": {
      "uri": "search",
      "summary": "Searches for issues using JQL.",
      "httpMethod": "GET",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/6.3/#d2e5109"
      },
      "parameters": {
        "jql": {
          "$ref": "JqlParameter"
        },
        "startAt": {
          "description": "The index of the first issue to return (0-based).",
          "location": "query",
          "type": "string"
        },
        "maxResults": {
          "description": "The maximum number of issues to return (defaults to 50).",
          "location": "query",
          "type": "string"
        },
        "validateQuery": {
          "description": "Whether to validate the JQL query.",
          "location": "query",
          "type": "boolean"
        },
        "fields": {
          "$ref": "FieldsParameter"
        },
        "expand": {
          "description": "A comma-separated list of the parameters to expand.",
          "location": "query",
          "type": "string"
        }
      }
    }
  },
  "models": {
    "JsonParameter": {
      "description": "Field to go into the body of the request.",
      "location": "json"
    },
    "ExpandParameter": {
      "description": "List of fields to expand.",
      "location": "query",
      "type": "string"
    },
    "FieldsParameter": {
      "description": "A comma-separated list of fields to include in the response.",
      "location": "query",
      "type": "string"
    },
    "GroupParameter": {
      "description": "A JIRA group name.",
      "location": "query",
      "type": "string"
    },
    "UserParameter": {
      "description": "A JIRA user name.",
      "location": "query",
      "type": "string"
    },
    "IdParameter": {
      "description": "A general ID or key.",
      "location": "uri",
      "type": "string"
    },
    "IssueParameter": {
      "description": "A JIRA issue ID or key, e.g. DEMO-1234.",
      "location": "uri",
      "type": "string"
    },
    "JqlParameter": {
      "description": "A full JQL expression, including an ORDER BY clause.",
      "location": "query",
      "type": "string"
    },
    "ProjectParameter": {
      "description": "A JIRA project ID or key, e.g. DEMO.",
      "location": "uri",
      "type": "string"
    },
    "ProjectQueryParameter": {
      "description": "A JIRA project ID or key, e.g. DEMO but in the query string.",
      "location": "query",
      "type": "string"
    }
  }
}
