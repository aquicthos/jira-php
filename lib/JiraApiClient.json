{
  "name": "JiraApiClient",
  "apiVersion": "0.1",
  "description": "JIRA REST API client",
  "operations": {
    "getIssue": {
      "httpMethod": "GET",
      "uri": "issue/{issueKey}",
      "summary": "Retrieve an issue.",
      "data": {
        "documentation": "https://docs.atlassian.com/jira/REST/latest/#d2e3392"
      },
      "parameters": {
        "issueKey": {
          "$ref": "IssueParameter"
        },
        "fields": {
          "description": "A comma-separated list of fields to include in the response.",
          "location": "query",
          "type": "string"
        }
      }
    }
  },
  "models": {
    "IssueParameter": {
      "description": "A JIRA issue ID or key, e.g. DEMO-1234.",
      "location": "uri",
      "required": true,
      "type": "string"
    }
  }
}
